{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "command": "mix",
  "type": "shell",
  "presentation": {
    "echo": true,
    "reveal": "always",
    "focus": false,
    "panel": "shared",
    "showReuseMessage": true,
    "clear": false
  },
  "problemMatcher":"$mixTestFailure",
  "tasks": [
    {
      "label": "Run current test file",
      "args": [
        "test",
        "${file}"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
    },
    {
      "label": "Run all tests",
      "group": "test",
      "args": [
        "test"
      ]
    },
    {
      "label": "Run current test",
      "args": [
        "test",
        "${file}:${lineNumber}"
      ],
      "group": "test"
    }
  ]
}